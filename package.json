{
  "name": "@react-pdv/root",
  "version": "1.0.0",
  "description": "React component library for cross-platform offline applications",
  "main": "index.js",
  "repository": "https://github.com/vicentedealencar/react-pdv",
  "author": "Vicente de Alencar <vicentedealencar@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "main",
    "library"
  ],
  "scripts": {
    "start": "yarn workspace react-pdv-library start",
    "build": "yarn workspace react-pdv build",
    "build:cjs": "yarn workspace react-pdv build:commonjs",
    "test": "npm-run-all --serial build test:library",
    "test:watch": "npm-run-all --parallel build:cjs test:library --watch",
    "howto:test:library": "yarn test:library --rootDir=$(pwd)",
    "test:library": "yarn workspace react-pdv-library test --modulePaths=library --modulePaths=main --testMatch=**/*.test.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3"
  }
}
