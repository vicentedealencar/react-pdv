{
  "name": "react-pdv",
  "version": "0.0.7",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development kit examples --mode library",
    "build": "babel ./src -d dist",
    "build:dev": "cross-env NODE_ENV=development yarn build --watch",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "prepublish": "npm-run-all format-then-test build:prod",
    "format": "prettier-eslint --write **/*.js !**/dist/**",
    "test": "jest",
    "format-then-test": "npm-run-all format test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicentedealencar/react-pdv.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format-then-test"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@compositor/kit-cli": "^1.0.37",
    "@compositor/kit-snapshot": "^1.0.24",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-react-app": "^3.1.1",
    "cross-env": "^5.1.6",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^1.0.0-rc.8",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.0"
  },
  "dependencies": {
    "invariant": "^2.2.4"
  }
}
