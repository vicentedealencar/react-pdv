{
  "name": "react-pdv",
  "version": "0.0.17",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:examples": "cross-env NODE_ENV=development kit examples --mode library --port 5757 --open",
    "start:examples:wait": "wait-on http-get://localhost:5757/",
    "start:dev": "npm-run-all --serial start:examples:wait start:dev:watch",
    "start:dev:watch": "chokidar \"**/*.js\" -i \"**/dist/**\" -i \"**/node_modules/**\" --initial --debounce 120000 -c \"npm-run-all --serial format test\"",
    "build": "yarn build:prod",
    "build:clean": "rimraf ./dist/*",
    "build:rollup": "rollup --config",
    "build:babel": "babel ./src -d dist",
    "build:dev": "cross-env NODE_ENV=development yarn build:babel",
    "build:dev:watch": "yarn build:dev --watch",
    "build:prod": "cross-env NODE_ENV=production yarn build:rollup",
    "format": "prettier-eslint --write **/*.js !**/dist/**",
    "test": "jest --notify --colors",
    "test:update": "yarn test --updateSnapshot",
    "test:bail": "yarn test --bail",
    "test:format": "npm-run-all --serial test:bail format"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicentedealencar/react-pdv.git"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test:format"
    }
  },
  "babel": {
    "presets": [
      "react",
      "env"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@compositor/kit-cli": "^1.0.37",
    "@compositor/kit-snapshot": "^1.0.24",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.1.6",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^1.0.0-rc.8",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "numeral": "^2.0.6"
  }
}
